<UserControl x:Class="Cafemoca.McCommandStudio.Views.Flips.SettingFlips.Compile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="480"
             d:DesignWidth="640"
             mc:Ignorable="d">

    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label Width="160"
                       Content="エスケープ文字の生成モード:"
                       ToolTip="コマンド生成時にエスケープ文字を自動補完する際に、指定したバージョンに対応した数が生成されます" />
                <ComboBox Width="200"
                          DisplayMemberPath="Value"
                          ItemsSource="{Binding EscapeModeList}"
                          SelectedValue="{Binding EscapeMode}"
                          SelectedValuePath="Key" />
            </StackPanel>
        </StackPanel>
    </Grid>

</UserControl>
